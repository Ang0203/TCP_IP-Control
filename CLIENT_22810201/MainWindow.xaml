<Window x:Class="CLIENT_22810201.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CLIENT_22810201" Height="600" Width="800">
    <Grid>
        <StackPanel Name="ConnectionPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="IP:" FontSize="25" Margin="0,0,0,5"/>
            <TextBox Name="txtServerIP" Width="200" Height="50" FontSize="18" Margin="0,00,0,10" Text="192.168.109.128"
                     TextAlignment="Left" VerticalContentAlignment="Center"/>
            <TextBlock Text="Port:" FontSize="25" Margin="0,0,0,5"/>
            <TextBox Name="txtPort" Width="200" Height="50" FontSize="18" Margin="0,0,0,10" Text="8080"
                     TextAlignment="Left" VerticalContentAlignment="Center"/>
            <Button Name="btnConnect" Content="Kết nối" Click="BtnConnect_Click" Width="150" Height="50" FontSize="16" Margin="0,10,0,0"/>
            <TextBox Name="txtStatus" Foreground="Red" FontSize="16" Margin="0,10,0,0" 
                    Visibility="Collapsed" TextWrapping="Wrap" Height="100" 
                    IsReadOnly="True" Background="Transparent" BorderThickness="0"/>
        </StackPanel>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Visibility="Collapsed"/>
    </Grid>
</Window>
