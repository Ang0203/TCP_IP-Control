<Page x:Class="CLIENT_22810201.KeyboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:CLIENT_22810201"
      Title="Điều khiển Bàn phím">

    <StackPanel Margin="20" HorizontalAlignment="Center">
        <!-- Tiêu đề -->
        <TextBlock Text="Điều khiển Bàn phím" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Nút Khóa Bàn Phím -->
        <Button Content="Khóa Bàn Phím" Width="200" Height="50" Margin="10" Click="LockKeyboardButton_Click"/>

        <!-- Nút Mở Khóa Bàn Phím -->
        <Button Content="Mở Khóa Bàn Phím" Width="200" Height="50" Margin="10" Click="UnlockKeyboardButton_Click"/>

        <!-- Nút Quay Lại -->
        <Button Content="Quay Lại" Width="200" Height="50" Margin="10" Click="BackButton_Click"/>

        <!-- Khu vực thông báo kết quả (nếu có) -->
        <TextBlock x:Name="ResultTextBlock" Text="" Foreground="Green" FontSize="16" HorizontalAlignment="Center" Margin="20,10,20,0"/>
    </StackPanel>
</Page>
