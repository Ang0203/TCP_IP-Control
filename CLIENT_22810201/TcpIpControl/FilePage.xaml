<Page x:Class="CLIENT_22810201.FilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:CLIENT_22810201"
      Title="Quản lý Tệp">

    <StackPanel Margin="20">
        <!-- Tiêu đề -->
        <TextBlock Text="Quản lý Tệp" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Ô nhập đường dẫn tệp -->
        <TextBox x:Name="FilePathTextBox" Width="300" Margin="10" HorizontalAlignment="Center"/>

        <!-- Các nút Sao chép và Xóa tệp -->
        <StackPanel Margin="10" HorizontalAlignment="Center">
            <Button Content="Sao chép tệp" Width="200" Height="50" Margin="10" Click="CopyFileButton_Click"/>
            <Button Content="Xóa tệp" Width="200" Height="50" Margin="10" Click="DeleteFileButton_Click"/>
            <Button Content="Quay Lại" Width="200" Height="50" Margin="10" Click="BackButton_Click"/>
        </StackPanel>

        <!-- Khu vực thông báo kết quả -->
        <TextBlock x:Name="ResultTextBlock" Text="" Foreground="Green" FontSize="16" HorizontalAlignment="Center" Margin="20,10,20,0"/>
    </StackPanel>

</Page>
