<Page x:Class="CLIENT_22810201.ShutdownPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:CLIENT_22810201"
      Title="Tắt hoặc Khởi động lại Máy">

    <StackPanel Margin="20" HorizontalAlignment="Center">
        <!-- Tiêu đề -->
        <TextBlock Text="Tắt hoặc Khởi động lại Máy" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Nút Tắt Máy -->
        <Button Content="Tắt Máy" Width="200" Height="50" Margin="10" Click="ShutdownButton_Click"/>

        <!-- Nút Khởi Động Lại -->
        <Button Content="Khởi Động Lại" Width="200" Height="50" Margin="10" Click="RestartButton_Click"/>
        
        <!-- Nút Quay Lại -->
        <Button Content="Quay Lại" Width="200" Height="50" Margin="10" Click="BackButton_Click"/>
        
        <!-- Khu vực thông báo kết quả -->
        <TextBlock x:Name="ResultTextBlock" Text="" Foreground="Green" FontSize="16" HorizontalAlignment="Center" Margin="20,10,20,0"/>
    </StackPanel>
</Page>
